<h2>Learning <a href="/bands?<%= escape_url(:language => params[:language], :genre => params[:genre]) %>"><%= @language_name %></a> with <a href="/bands/<%= params[:mbid] %>/tracks?<%= escape_url(:language => params[:language], :genre => params[:genre]) %>"><%= @track['artist_name'] %></a></h2>

<div class="alert alert-success hidden">
  Well done!
</div>

<div class="row-fluid">
  <div class="span11">
    <h3>“<%=h @track['track_name'] %>” from “<%=h @track['album_name'] %>”</h3>
    <div class="row-fluid">
      <div class="span4" id="player"></div>
      <div class="span7">
        <div id="lyrics">
          <% @lyrics_with_blanks['lyrics_body'].each_with_index do |line, i| %>
            <p <% if @lyrics_with_time %>class="lyrics-with-time" data-time="<%=  @lyrics_with_time[i][0] %>"<% end %>>
            <% line.each_with_index do |word, j|
              if word == '__BLANK__' %>
                <input type="text" placeholder="" name="word[<%= i %>][<%= j %>]" id="word-<%= i %>-<%= j %>" data-value="<%=h @lyrics_with_blanks['removed_words'][i][j] %>" value="">
                <script type="text/javascript">
                  $(document).ready(function() {
                    $('#word-<%= i %>-<%= j %>').keyup(function(event) {
                      Kantas.checkResponse(<%= i.inspect %>, <%= j.inspect %>);
                    });
                  });
                </script>
              <% else %>
                <%=h word %>
              <% end %>
            <% end %>
            </p>
          <% end %>
        </div>
        <img src="<%= @track['pixel_tracking_url'] %>">
        <p class="copy"><%=h @track['lyrics_copyright'] %></p>
      </div>
    </div>
  </div>
</div>

<script src="http://toma.hk/api.js?v=1"></script>
<script type="text/javascript">
  $(document).ready(function() {
    Kantas.renderTrack("<%=h @track['artist_name'] %>", "<%=h @track['track_name'] %>");
  });
</script>

