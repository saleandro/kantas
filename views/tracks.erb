<div class="row-fluid">
  <% unless @artist %>
    <p class="notice">No lyrics :( </p>
    <p><a href="/bands?<%= escape_url(:language => params[:language], :genre => params[:genre]) %>">Choose another band</a></p>
  <% else %>
  <h2>Learning <a href="/bands?<%= escape_url(:language => params[:language], :genre => params[:genre]) %>"><%=h @language_name %></a> with <a href="/bands/<%= params[:mbid] %>/tracks?<%= escape_url(:language => params[:language], :genre => params[:genre]) %>"><%=h @artist['artist_name'] %></a></h2>
  <img class="thumbnail" src="<%= @artist['image'] %>" width="142" height="142" align="right">
  <% if @tracks.any?  %>
    <ul class="tracks">
      <% @tracks.each do |track| %>
        <li>
          <a class="lyrics-link" data-lyrics="<%= track['track_id'] %>" href="/bands/<%= @artist['mbid'] %>/tracks/<%= track['track_id'] %>?<%= escape_url(:language => params[:language], :genre => params[:genre]) %>">
            “<%=h track['track_name'] %>” from “<%=h track['album_name'] %>”
          </a>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="notice">No lyrics :( </p>
    <p><a href="/bands?<%= escape_url(:language => params[:language], :genre => params[:genre]) %>">Choose another band</a></p>
  <% end %>
  <% end %>
</div>
