<% if @bands.any?  %>
<ul class="bands media-grid">
  <% @bands.each do |band| %>
    <li><a class="artist-image" href="/bands/<%= band['mbid'] %>/tracks?language=<%= params[:language] %>">
      <img class="thumbnail" src="<%= band['image'] %>" width="142" height="142">
      <span class="band"><%= band['name'] %></span>
      </a>
      <div class="stats">
        <% if band['tags'].any?  %>
          <div class="tags"><%= band['tags'].first(5).join(', ') %></div>
        <% end %>
        <img src="/img/flags/<%= band['country'].downcase %>.png">
      </div>
    </li>
  <% end %>
</ul>
<% else %>
  <p class="notice">No bands :( </p>
  <p><a href="/">Start again</a></p>
<% end %>
